<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Add A New Sneaker</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Add a new sneaker to your collection. Fill our form to get started.</p>
    </div>
</div>

<div class="row justify-content-center">

    <% if(infoSubmitObj != '') { %>
        <div class="col-8 alert alert-success" role="alert">
          <%= infoSubmitObj %>
        </div>
      <% } %>
    
      <% if(infoErrorsObj != '') { %>
        <div class="col-8 alert alert-danger" role="alert">
          <%= infoErrorsObj[0].message %>
        </div>
      <% } %>

    <div class="col-8">
        <form action="/add-sneaker" enctype="multipart/form-data" method="POST">
            <div class="row g-3">
                <div class="col-12">
                    <label for="name" class="form-label">Sneaker Name</label>
                    <input type="text" name="name" id="name">
                </div>

                <div class="col-12">
                    <label for="price" class="form-label">Sneaker Value</label>
                    <input type="text" name="price" id="price">
                </div>

                <div class="col-12">
                    <label for="brand">Select Brand</label>
                    <select class="form-select form-control" name="brand" aria-label="Brand">
                      <option selected>Select Brand</option>
                      <option value='Nike'>Nike</option>
                      <option value='Adidas'>Adidas</option>
                      <option value='Air Jordan'>Air Jordan</option>
                      <option value='Yeezy'>Yeezy</option>
                      <option value='Converse'>Converse</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image">Sneaker Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Add To Your Collection</button>
                </div>
          
               
            </div>
        </form>
    </div>
</div> 